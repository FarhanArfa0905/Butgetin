<resources>
    <!-- Base application theme. -->
    <style name="Theme.ButgetIn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Theme.ButgetIn.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/dark_green</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="CustomDatePickerDialogExpense" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/expense</item>
        <item name="colorPrimaryVariant">@color/light_red</item>
        <item name="colorOnPrimary">@color/expense</item>
        <item name="colorSecondary">@color/expense</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="materialCalendarTheme">@style/CustomCalendar</item>
    </style>

    <style name="CustomDatePickerDialogIncome" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/income</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/income</item>
        <item name="colorSecondary">@color/income</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="materialCalendarTheme">@style/CustomCalendar</item>
    </style>

    <style name="CustomCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlHighlight">@color/dark_green</item>
    </style>
</resources>