<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" tools:targetApi="33" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ButgetIn"
        tools:targetApi="31">

        <!-- Activities -->
        <activity
            android:name=".ui.tab.TabActivity"
            android:exported="false"
            android:theme="@style/Theme.ButgetIn.NoActionBar" />
        <activity
            android:name=".ui.article.DetailActivity"
            android:exported="false"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:enabled="true" />
        <activity
            android:name=".ui.article.ArticleActivity"
            android:exported="false"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".ui.notification.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.ButgetIn.NoActionBar" />
        <activity
            android:name=".ui.login.LogInActivity"
            android:exported="false"
            android:theme="@style/Theme.ButgetIn.NoActionBar" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.ButgetIn.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ButgetIn.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <receiver
            android:name=".ui.profile.ProfileActivity$NotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.dicoding.butgetin.REMINDER" />
            </intent-filter>
        </receiver>
    </application>
</manifest>